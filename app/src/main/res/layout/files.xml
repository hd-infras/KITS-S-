<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:id="@+id/coordinatorLayout"
android:orientation="vertical"
android:weightSum="1">
    <RadioGroup
        android:id="@+id/radioyear"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.SearchResult.Title"
            android:text="Year:  " />

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>


        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>
        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="3"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>
        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

    </RadioGroup>

    <RadioGroup
        android:id="@+id/radiobranch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:paddingLeft="6dp">

        <TextView
            android:id="@+id/textbarnch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        <RadioButton
            android:id="@+id/radioButtonCSE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CSE"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />


        <RadioButton
            android:id="@+id/radioButtonECE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ECE"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        <RadioButton
            android:id="@+id/radioButtonEEE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="EEE"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
        <RadioButton
            android:id="@+id/radioButtonCIVIL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CIVIL"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        <RadioButton
            android:id="@+id/radioButtonHS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="H&amp;S"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        <RadioButton
            android:id="@+id/radioButtonME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ME"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

    </RadioGroup>



    <EditText
        android:id="@+id/textregulation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="2dp"
        android:hint="[ Regulation ]/[ TextBook Name ]/[ Sub:AssignmentNo]"
        android:inputType="text"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead" />

    <Button
        android:id="@+id/Fetch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="Fetch" />
    <android.support.v7.widget.RecyclerView
    android:id="@+id/files"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
        android:paddingBottom="0dp"/>

</LinearLayout>